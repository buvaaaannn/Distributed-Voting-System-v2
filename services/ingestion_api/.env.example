# Service Configuration
SERVICE_NAME=ingestion-api
API_VERSION=v1
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_EXCHANGE=votes.exchange
RABBITMQ_ROUTING_KEY=vote.submitted

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=election_db
POSTGRES_USER=election_user
POSTGRES_PASSWORD=election_pass

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT=100/minute

# CORS Settings (comma-separated for multiple origins)
CORS_ORIGINS=*

# Connection Pools
POSTGRES_POOL_MIN_SIZE=10
POSTGRES_POOL_MAX_SIZE=20
RABBITMQ_POOL_SIZE=10
